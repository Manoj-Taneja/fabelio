                    <th><?php echo $this->__('ID') ?></th>
                    <th><?php echo $this->__('Name') ?></th>
                    <th><?php echo $this->__('SKU') ?></th>
                    <th><?php echo $this->__('Product Price') ?></th>
                    <th><?php echo $this->__('Qty Available') ?></th>
